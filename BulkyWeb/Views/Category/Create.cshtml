@model Category

<style>
    .border {
        border-width: 5px;
    }
</style>

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create a new category
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 300px; height: 53px;"> Create </button>
        <a asp-asp-controller="Category" asp-action="Index" class="btn btn-secondary border border-2 border-black"
            style="width: 300px;">Back to list</a>
    </div>
</form>
